<div class="container">
  <div class="row justify-content-center align-items-center" style="height:60vh">
    <div class="col-4">
      <div class="card">
        <div class="card-header text-center">
          <h4><%= t('form_login.sign_up')%></h4>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group">
              <%= f.email_field :email, autocomplete: "email", placeholder: "E-mail", class: "form-control" %>
            </div>
            <div class="form-group">
              <% if @minimum_password_length %>
                <%#= @minimum_password_length %>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "Senha", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Senha (confirmação)", class: "form-control"  %>
            </div>
            <div class="form-group">
              <%= render "devise/shared/links" %>
            </div>
            <%= f.submit "#{t 'form_login.sign_up'}", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
