

<p id="notice"><%= notice %></p>
<h1>
  <%= translate 'form.posts' %>
</h1>

<div class="table-responsive">  
  <table class="table table-hover table-dark">
    <thead>
      <tr>
        <th>
          <%= translate 'form.title' %>
        </th>
        <th>
          <%= translate 'form.body' %>
        </th>
        <th colspan="3"></th>
      </tr>
    </thead>
        
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= post.title %>
          </td>
          <td>
            <%= post.body[0..20] ... %>
          </td>
          <td>
            <%= link_to "<i class='fa fa-edit' title='#{translate 'form.edit'}'></i>".html_safe, post %>
          </td>
          <td>
            <%= link_to "<i class='fa fa-eye' title='#{translate 'form.edit'}'></i>".html_safe, edit_post_path(post) %>
          </td>
          <td>
            <%= link_to "<i class='fa fa-trash-alt' title='#{translate 'form.edit'}'></i>".html_safe, post, method: :delete, data: { confirm: "#{translate 'form.confirm'}" } %>
          </td>
        </tr> 
      <% end %>
    </tbody>
  </table>
</div>
  
<br>
<%= link_to "#{translate 'form.newPost'}", new_post_path, {class: "btn btn-dark"} %> 

