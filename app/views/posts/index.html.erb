

<div class="table-responsive">
  <p id="notice"><%= notice %></p>
  <h1><%= translate 'form.posts' %></h1>
  <table class="table table-hover table-dark">
    <thead>
      <tr>
        <th><%= translate 'form.title' %> </th>
        <th><%= translate 'form.body' %> </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= link_to "#{translate 'form.show'}", post %></td>
          <td><%= link_to "#{translate 'form.edit'}", edit_post_path(post) %></td>
          <td><%= link_to "#{translate 'form.destroy'}", post, method: :delete, data: { confirm: "#{translate 'form.confirm'}" } %></td>
        </tr> 
      <% end %>
    </tbody>
  </table>
  <br>
    <%= link_to "#{translate 'form.newPost'}", new_post_path, {class: "btn btn-dark"} %> 
</div>
