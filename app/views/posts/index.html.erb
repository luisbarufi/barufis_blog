
<p id="notice"><%= notice %></p>
<h1> <%= t('menu.posts') %> </h1>

<div class="table-responsive">  
  <table class="table table-hover table-dark">
    <thead>
      <tr>
        <th> <%= translate 'activerecord.attributes.attribute_commons.title' %> </th>
        <th> <%= translate 'activerecord.attributes.attribute_commons.body' %> </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <% body_str = strip_tags post.body.gsub('><', '> <').strip %>
        <tr>
          <td> <%= post.title %> </td>
          <td> <%= truncate(body_str, length: 30) %> </td>
          <td> <%= link_to "<i class='fa fa-edit' title='#{translate 'form.edit'}'></i>".html_safe, edit_post_path(post) %> </td>
          <td> <%= link_to "<i class='fa fa-eye' title='#{translate 'form.show'}'></i>".html_safe, post%> </td>
          <td> <%= link_to "<i class='fa fa-trash-alt' title='#{translate 'form.destroy'}'></i>".html_safe, post, method: :delete, data: { confirm: "#{translate 'form.confirm'}" } %> </td>
        </tr> 
      <% end %>
    </tbody>
  </table>
</div>

<br>
<%= link_to "#{translate 'form_post.new_post'}", new_post_path, {class: "btn btn-dark"} %>
